pipeline {
    agent any 

    stages {
        stage('Cleaning Workspace') {
            steps {
                cleanWs()
            }
        }
        stage('Checkout from Git') {
            steps {
                // REMPLACEZ PAR VOTRE URL GITHUB
                git branch: 'master', url: 'https://github.com/LynaLarem/Microservices-E-Commerce-eks-project.git'
            }
        }
        stage("Docker Image Build") {
            steps {
                script {
                    // Vérifiez que ce chemin existe dans votre repo
                    dir('src/cartservice/src') { 
                        sh 'docker build -t cartservice .'
                    }
                }
            }
        }
        stage("ECR Image Pushing") {
            steps {
                script {
                    sh '''
                    # REMPLACEZ 481309507296 PAR VOTRE ID DE COMPTE (VOIR AWS DETAILS)
                    aws ecr get-login-password --region us-east-1 | docker login --username AWS --password-stdin 481309507296.dkr.ecr.us-east-1.amazonaws.com

                    docker tag cartservice:latest 481309507296.dkr.ecr.us-east-1.amazonaws.com/cartservice:${BUILD_NUMBER}

                    docker push 481309507296.dkr.ecr.us-east-1.amazonaws.com/cartservice:${BUILD_NUMBER}
                    '''
                }
            }
        }
        stage('Update Deployment file') {
            environment {
                GIT_REPO_NAME = "Microservices-E-Commerce-eks-project"
                GIT_USER_NAME = "LynaLarem" // VOTRE PSEUDO GITHUB
                IMAGE_NAME = "cartservice"
                REPO_URL = "481309507296.dkr.ecr.us-east-1.amazonaws.com/cartservice"
                YAML_FILE = "cartservice.yaml"
            }
            steps {
                dir('kubernetes-files') {
                    // Assurez-vous d'avoir créé le credential 'my-git-pattoken' dans Jenkins
                    withCredentials([string(credentialsId: 'my-git-pattoken', variable: 'git_token')]) {
                        sh '''
                            git config user.email "votre-email@exemple.com"
                            git config user.name "${GIT_USER_NAME}"
                            
                            # Met à jour l'image dans le fichier YAML
                            sed -i "s#image:.*#image: ${REPO_URL}:${BUILD_NUMBER}#g" ${YAML_FILE}
                            
                            git add .
                            git commit -m "Update ${IMAGE_NAME} Image to version ${BUILD_NUMBER}"
                            git push https://${git_token}@github.com/${GIT_USER_NAME}/${GIT_REPO_NAME} HEAD:main
                        '''
                    }
                }
            }
        }
    }
}
