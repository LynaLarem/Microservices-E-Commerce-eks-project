pipeline {
    agent any 

    stages {
        stage('Cleaning Workspace') {
            steps {
                cleanWs()
            }
        }
        stage('Checkout from Git') {
            steps {
                // Point vers VOTRE fork
                git branch: 'master', url: 'https://github.com/LynaLarem/Microservices-E-Commerce-eks-project.git'
            }
        }
        stage("Docker Image Build") {
            steps {
                script {
                    dir('src/emailservice') {
                        sh 'docker system prune -f'
                        sh 'docker container prune -f'
                        sh 'docker build -t emailservice .'
                    }
                }
            }
        }
        stage("ECR Image Pushing") {
            steps {
                script {
                    sh '''
                    # Connexion avec VOTRE ID de compte AWS
                    aws ecr get-login-password --region us-east-1 | docker login --username AWS --password-stdin 481309507296.dkr.ecr.us-east-1.amazonaws.com

                    # Tag de l'image pour VOTRE ECR
                    docker tag emailservice:latest 481309507296.dkr.ecr.us-east-1.amazonaws.com/emailservice:${BUILD_NUMBER}

                    # Push de l'image
                    docker push 481309507296.dkr.ecr.us-east-1.amazonaws.com/emailservice:${BUILD_NUMBER}
                    '''
                }
            }
        }
        stage('Update Deployment file') {
            environment {
                GIT_REPO_NAME = "Microservices-E-Commerce-eks-project"
                GIT_EMAIL = "lyna.larem@example.com" // Vous pouvez mettre votre email GitHub ici
                GIT_USER_NAME = "LynaLarem"
                IMAGE_NAME = "emailservice"
                REPO_URL = "481309507296.dkr.ecr.us-east-1.amazonaws.com/emailservice"
                YAML_FILE = "emailservice.yaml"
            }
            steps {
                // Attention : vérifiez que le dossier s'appelle bien 'kubernetes-files' ou 'kubernetes-manifests' dans votre Github
                dir('kubernetes-files') {
                    withCredentials([string(credentialsId: 'my-git-pattoken', variable: 'git_token')]) {
                        sh '''
                            git config user.email "${GIT_EMAIL}"
                            git config user.name "${GIT_USER_NAME}"
                            
                            # Mise à jour du fichier YAML avec la nouvelle version de l'image
                            sed -i "s#image:.*#image: ${REPO_URL}:${BUILD_NUMBER}#g" ${YAML_FILE}
                            
                            git add .
                            git commit -m "Update ${IMAGE_NAME} Image to version ${BUILD_NUMBER}"
                            git push https://${git_token}@github.com/${GIT_USER_NAME}/${GIT_REPO_NAME} HEAD:master
                        '''
                    }
                }
            }
        }
    }
}
