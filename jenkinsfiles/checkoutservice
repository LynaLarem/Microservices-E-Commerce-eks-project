pipeline {
    agent any 

    stages {
        stage('Cleaning Workspace') {
            steps {
                cleanWs()
            }
        }
        stage('Checkout from Git') {
            steps {
                // Utilisation de TON dépôt et de la branche master
                git branch: 'master', url: 'https://github.com/LynaLarem/Microservices-E-Commerce-eks-project.git'
            }
        }
        stage("Docker Image Build") {
            steps {
                script {
                    // Vérification du chemin : src/checkoutservice
                    dir('src/checkoutservice') {
                        sh 'docker build -t checkoutservice .'
                    }
                }
            }
        }
        stage("ECR Image Pushing") {
            steps {
                script {
                    sh '''
                    # Connexion à TON registre ECR
                    aws ecr get-login-password --region us-east-1 | docker login --username AWS --password-stdin 891376965767.dkr.ecr.us-east-1.amazonaws.com

                    # Tag avec le numéro de build Jenkins
                    docker tag checkoutservice:latest 891376965767.dkr.ecr.us-east-1.amazonaws.com/checkoutservice:${BUILD_NUMBER}

                    # Push vers ton ECR
                    docker push 891376965767.dkr.ecr.us-east-1.amazonaws.com/checkoutservice:${BUILD_NUMBER}
                    '''
                }
            }
        }
        stage('Update Deployment file') {
            environment {
                GIT_REPO_NAME = "Microservices-E-Commerce-eks-project"
                GIT_USER_NAME = "LynaLarem" 
                IMAGE_NAME = "checkoutservice"
                REPO_URL = "891376965767.dkr.ecr.us-east-1.amazonaws.com/checkoutservice"
                YAML_FILE = "checkoutservice.yaml"
            }
            steps {
                dir('kubernetes-files') {
                    withCredentials([string(credentialsId: 'my-git-pattoken', variable: 'git_token')]) {
                        sh '''
                            git config user.email "lyna@example.com"
                            git config user.name "${GIT_USER_NAME}"
                            
                            # Mise à jour du fichier YAML avec la nouvelle image
                            sed -i "s#image:.*#image: ${REPO_URL}:${BUILD_NUMBER}#g" ${YAML_FILE}
                            
                            git add .
                            git commit -m "Update ${IMAGE_NAME} Image to version ${BUILD_NUMBER}"
                            git push https://${git_token}@github.com/${GIT_USER_NAME}/${GIT_REPO_NAME} HEAD:master
                        '''
                    }
                }
            }
        }
    }
}
