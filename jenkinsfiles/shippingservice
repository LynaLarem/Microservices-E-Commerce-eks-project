pipeline {
    agent any 

    stages {
        stage('Cleaning Workspace') {
            steps {
                cleanWs()
            }
        }
        stage('Checkout from Git') {
            steps {
                git branch: 'master', url: 'https://github.com/LynaLarem/Microservices-E-Commerce-eks-project.git'
            }
        }
        stage("Docker Image Build") {
            steps {
                script {
                    dir('src/shippingservice') {
                        sh 'docker build -t shippingservice .'
                    }
                }
            }
        }
        stage("ECR Image Pushing") {
            steps {
                script {
                    sh '''
                    # Connexion à TON compte AWS
                    aws ecr get-login-password --region us-east-1 | docker login --username AWS --password-stdin 891376965767.dkr.ecr.us-east-1.amazonaws.com

                    docker tag shippingservice:latest 891376965767.dkr.ecr.us-east-1.amazonaws.com/shippingservice:${BUILD_NUMBER}

                    docker push 891376965767.dkr.ecr.us-east-1.amazonaws.com/shippingservice:${BUILD_NUMBER}
                    '''
                }
            }
        }
        stage('Update Deployment file') {
            environment {
                GIT_REPO_NAME = "Microservices-E-Commerce-eks-project"
                GIT_USER_NAME = "LynaLarem"
                IMAGE_NAME = "shippingservice"
                REPO_URL = "891376965767.dkr.ecr.us-east-1.amazonaws.com/shippingservice"
                YAML_FILE = "shippingservice.yaml"
            }
            steps {
                dir('kubernetes-files') {
                    withCredentials([string(credentialsId: 'my-git-pattoken', variable: 'git_token')]) {
                        sh '''
                            git config user.email "lyna@example.com"
                            git config user.name "${GIT_USER_NAME}"
                            
                            sed -i "s#image:.*#image: ${REPO_URL}:${BUILD_NUMBER}#g" ${YAML_FILE}
                            
                            git add .
                            git commit -m "Update ${IMAGE_NAME} Image to version ${BUILD_NUMBER}"
                            # On force le push pour éviter les erreurs de conflit
                            git push https://${git_token}@github.com/${GIT_USER_NAME}/${GIT_REPO_NAME} HEAD:master -f
                        '''
                    }
                }
            }
        }
    }
}
