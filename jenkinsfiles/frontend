pipeline {
    agent any 

    stages {
        stage('Cleaning Workspace') {
            steps {
                cleanWs()
            }
        }
        stage('Checkout from Git') {
            steps {
                // Récupération du code source
                git branch: 'master', url: 'https://github.com/LynaLarem/Microservices-E-Commerce-eks-project.git'
            }
        }
        stage("Docker Image Build") {
            steps {
                script {
                    dir('src/frontend') {
                        sh 'docker build -t frontend .'
                    }
                }
            }
        }
        stage("ECR Image Pushing") {
            steps {
                script {
                    // Connexion et push vers ton ECR (ID: 891376965767)
                    sh '''
                    aws ecr get-login-password --region us-east-1 | docker login --username AWS --password-stdin 891376965767.dkr.ecr.us-east-1.amazonaws.com
                    docker tag frontend:latest 891376965767.dkr.ecr.us-east-1.amazonaws.com/frontend:${BUILD_NUMBER}
                    docker push 891376965767.dkr.ecr.us-east-1.amazonaws.com/frontend:${BUILD_NUMBER}
                    '''
                }
            }
        }
        stage('Update Deployment file') {
            environment {
                GIT_REPO_NAME = "Microservices-E-Commerce-eks-project"
                GIT_EMAIL = "lyna.larem@example.com"
                GIT_USER_NAME = "LynaLarem"
                IMAGE_NAME = "frontend"
                REPO_URL = "891376965767.dkr.ecr.us-east-1.amazonaws.com/frontend"
                YAML_FILE = "frontend.yaml"
            }
            steps {
                // Utilisation du dossier correct : kubernetes-files
                dir('kubernetes-files') {
                    withCredentials([usernamePassword(credentialsId: 'my-git-pattoken', passwordVariable: 'git_token', usernameVariable: 'git_user')]) {
                        sh '''
                            git config user.email "${GIT_EMAIL}"
                            git config user.name "${GIT_USER_NAME}"
                            
                            # Mise à jour de l'image dans le fichier YAML fourni
                            sed -i "s#image:.*#image: ${REPO_URL}:${BUILD_NUMBER}#g" ${YAML_FILE}
                            
                            git add ${YAML_FILE}
                            git commit -m "Update ${IMAGE_NAME} Image to version ${BUILD_NUMBER}"
                            
                            # Push vers GitHub pour déclencher ArgoCD
                            git push https://${git_user}:${git_token}@github.com/${GIT_USER_NAME}/${GIT_REPO_NAME} HEAD:master
                        '''
                    }
                }
            }
        }
    }
}
