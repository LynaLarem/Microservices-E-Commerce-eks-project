pipeline {
    agent any

    parameters {
        choice(
            name: 'ACTION',
            choices: ['apply', 'destroy'],
            description: 'ðŸ”§ Select the Terraform action to perform (apply = create/update, destroy = delete all)'
        )
    }

    environment {
        // Liaison avec les secrets Secret Text crÃ©Ã©s dans Jenkins
        AWS_ACCESS_KEY_ID     = credentials('accesskey')
        AWS_SECRET_ACCESS_KEY = credentials('secretkey')
        AWS_SESSION_TOKEN     = credentials('token')
        AWS_DEFAULT_REGION    = 'us-east-1'
    }

    stages {
        stage('Checkout from Git') {
            steps {
                // Utilise l'ID de ton token GitHub configurÃ© dans Jenkins
                checkout([$class: 'GitSCM', 
                    branches: [[name: '*/master']], 
                    userRemoteConfigs: [[url: 'https://github.com/LynaLarem/Microservices-E-Commerce-eks-project.git', 
                    credentialsId: 'my-git-pattoken']]])
            }
        }

        stage('Terraform version') {
            steps {
                sh 'terraform --version'
            }
        }

        stage('Terraform init') {
            steps {
                dir('ecr-terraform') {
                    sh 'terraform init --reconfigure'
                }
            }
        }

        stage('Terraform validate') {
            steps {
                dir('ecr-terraform') {
                    sh 'terraform validate'
                }
            }
        }

        stage('Terraform plan') {
            steps {
                dir('ecr-terraform') {
                    sh 'terraform plan'
                }
            }
        }

        stage('Terraform apply') {
            when {
                expression { params.ACTION == 'apply' }
            }
            steps {
                dir('ecr-terraform') {
                    sh 'terraform apply -auto-approve'
                }
            }
        }

        stage('Terraform destroy') {
            when {
                expression { params.ACTION == 'destroy' }
            }
            steps {
                dir('ecr-terraform') {
                    sh 'terraform destroy -auto-approve'
                }
            }
        }
    }
}
